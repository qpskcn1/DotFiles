{
    "editor.fontFamily": "DroidSansMono Nerd Font Mono, Menlo, monospace",
    "terminal.integrated.fontFamily": "DroidSansMono Nerd Font Mono",
    "editor.rulers": [80],
    "workbench.colorTheme": "Dracula Soft",
    "workbench.iconTheme": "vscode-icons",
    "files.exclude": {
        ".vscode/": true,
        "**/._*": true,
        "**/*.pyc": true
    },
    "files.trimTrailingWhitespace": true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>","d"],
            "after": ["d", "d"]
        },
        {
            "before":["<C-n>"],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys":{
        "<C-a>": false,
    },
    "vim.statusBarColorControl": true,
    "workbench.statusBar.feedback.visible": false,
    "git.autofetch": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E402,E501,W292",
    ],
    "window.zoomLevel": 0,
    "editor.fontWeight": "600",
    "workbench.list.horizontalScrolling": true,
    "terminal.external.osxExec": "iTerm.app",
    "workbench.startupEditor": "welcomePage",
    "window.nativeFullScreen": false,
    "python.pythonPath": "/usr/local/bin/python3",
    "vim.statusBarColors.insert": "#6272a4",
    "vim.statusBarColors.replace": "#ff5555",
    "vim.statusBarColors.normal": "#44475a",
    "vim.statusBarColors.visual": "#ffb86c",
    "vim.statusBarColors.visualblock": "#8be9fd",
    "workbench.colorCustomizations": {
        "statusBar.background": "#44475a",
        "statusBar.noFolderBackground": "#44475a",
        "statusBar.debuggingBackground": "#44475a"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "breadcrumbs.enabled": true,
    "explorer.confirmDragAndDrop": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "liveServer.settings.donotVerifyTags": true,

}